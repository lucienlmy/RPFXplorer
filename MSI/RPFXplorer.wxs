<?xml version="1.0" encoding="UTF-8"?>  
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">  
	<Package   
		Name="RPFXplorer"   
		Language="1033"   
		Version="1.0.0.0"   
		Manufacturer="Mempler"   
		UpgradeCode="ad909369-ad84-4803-9401-c722cba0b87f"  
		InstallerVersion="200"   
		Compressed="yes"   
		>  
  
		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />  
		<MediaTemplate EmbedCab="yes" />  
  
		<Feature Id="ProductFeature" Title="RPFXplorer" Level="1">  
			<ComponentGroupRef Id="ProductComponents" />  
		</Feature>  
  
		<Launch Condition="VersionNT > 601" Message="This application only runs on Windows 7 or greater." />  
  
		<UIRef Id="WixUI_InstallDir" />  
		<UIRef Id="WixUI_Advanced" />  
		<Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />  
  
		<CustomAction Id="COMRegister" Impersonate="no" Execute="deferred" Directory="INSTALLFOLDER" ExeCommand='[System64Folder]regsvr32.exe /s "[INSTALLFOLDER]\rpfxplr.dll"' />  
		<CustomAction Id="COMUnregister" Impersonate="no" Execute="deferred" Directory="INSTALLFOLDER" ExeCommand='[System64Folder]regsvr32.exe /s /u "[INSTALLFOLDER]\rpfxplr.dll"' />  
  
		<InstallExecuteSequence>  
			<Custom Action="COMRegister" Before="InstallFinalize" Condition="NOT Installed"></Custom>
			<Custom Action="COMUnregister" After="InstallInitialize" Condition="Installed"></Custom>
		</InstallExecuteSequence>  
	</Package>  
  
	<Fragment>  
		<StandardDirectory Id="ProgramFiles64Folder">  
			<Directory Id="INSTALLFOLDER" Name="RPFXplorer" />  
		</StandardDirectory>  
	</Fragment>  
  
	<Fragment>  
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">  
			<Component Id="ShellExtension" Guid="d2399f74-6856-411d-aa60-c15c81978b6d">  
				<!-- shellext -->  
				<File Id="rpfxplr" Name="rpfxplr.dll" Source="bin/Release/shellext/rpfxplr.dll" KeyPath="yes" />  
  
				<!-- tools -->  
				<File Id="aulens" Name="aulens.exe" Source="bin/Release/tools/aulens.exe" />  
				<File Id="modlense" Name="modlense.exe" Source="bin/Release/tools/modlense.exe" />  
  
				<!-- Libraries -->  
				<File Id="rpf" Name="rpf.dll" Source="bin/Release/rpf.dll" />  
				<File Id="libcrypto" Name="libcrypto-3-x64.dll" Source="bin/Release/libcrypto-3-x64.dll" />  
				  
				<Shortcut Id="UninstallProduct"  
                  Name="Uninstall RPFXplorer"  
                  Description="Uninstall RPFXplorer Shell Extension"  
                  Target="[System64Folder]msiexec.exe"  
                  Arguments="/x [ProductCode]"/>  
  
				<RegistryValue Root="HKLM" Key="SOFTWARE\Microsoft\Windows\CurrentVersion\Shell Extensions\Approved" Type="string" Name="{AFE33D09-58FA-4B49-90AB-A9EF9E7A6C2E}" Value="RPFXplorer Shell Extension" />  
			</Component>  
		</ComponentGroup>  
	</Fragment>  
</Wix>